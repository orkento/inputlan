= form_for @memo do |f|
  - if @memo.errors.any?
    #error_explanation
      %h2= "#{pluralize(@memo.errors.count, "error")} prohibited this memo from being saved:"
      %ul
        - @memo.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :comment
    = f.text_area :comment
  .field
    = f.label :writer
    = f.text_field :writer
  .field
    = f.label :start_at
    = f.date_select :start_at
  .actions
    = f.submit 'Save'
